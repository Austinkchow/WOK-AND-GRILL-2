<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Index</title>
</head>

<body>
    <!-- Header Section -->
    <header>
        <!-- Title -->
        <h1>Item Index Page</h1>
        <%- include ('../partials/nav.ejs') %>

    </header>
    <!-- List of All Items -->
    <main>
        <h3>Items List</h3>

        <!-- Create New Item -->
        <div class="item-create/edit">
            <a href="/items/new">Create New Item</a>
            <!-- TODO: link to item id route -->
            <a href="#"></a>
        </div>

        <!-- Item List -->
        <ul class="item-list">
            <!-- Fill out the list of items -->
            <% items.forEach( element => {%>
            <li>
                <a href="/items/<%= element._id %> "><%= element.name %></a>
                <a href="/items/<%= element._id %>/edit">Edit</a>
            </li>
            <%}) %>
        </ul>
    </main>
</body>

</html>