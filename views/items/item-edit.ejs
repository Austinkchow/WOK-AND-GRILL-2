<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Edit</title>
</head>

<body>
    <!-- Header Section -->
    <header>
        <!-- Title -->
        <h1>Item Index Page</h1>
        <!-- Navagation Bar -->
        <%- include ('../partials/nav.ejs') %>

    </header>

    <!-- Item Edit Section -->
    <main>
        <div class="Item Container">
            <!-- post to menu show page -->
            <form action="/items/<%= item._id %>?_method=PUT" method="POST">

                <!-- Item name -->
                <label for="name">Name</label>
                <input type="text" name="name" value="<%= item.name %>">

                <!-- Item Picture -->
                <label for="image">Image</label>
                <input type="text" name="image" value="<%= item.image %>">

                <!-- Price -->
                <label for="price">Price</label>
                <input type="number" name="price" value="<%= item.price %>">

                <!-- Spiciness -->
                <label for="spicy">Spicy</label>
                <input type="number" name="spicy" value="<%= item.spicy %>">

                <!-- Description -->
                <label for="description">Description</label>
                <input type="textarea" name="description" value="<%= item.description %>">

                <!-- Submit Button -->
                <input type="submit" value="Update Item">
            </form>
        </div>
    </main>
</body>

</html>